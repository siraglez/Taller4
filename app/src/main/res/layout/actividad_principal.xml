<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@android:color/darker_gray"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ingresa tu nombre:"
        android:textColor="@color/black"
        android:textSize="18sp"/>

    <EditText
        android:id="@+id/editTextNombre"
        android:textColor="@color/black"
        android:layout_width="200dp"
        android:layout_height="48dp"
        android:padding="8dp"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/btnGuardarSQLite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Guardar nombre en SQLite"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnCargarSQLite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cargar nombres desde SQLite"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"/>

    <TextView
        android:id="@+id/textViewNombresSQLite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nombres en SQLite:"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"/>

    <Button
        android:id="@+id/btnConfig"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ir a ConfiguraciÃ³n"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"/>

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/textViewProgreso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:visibility="gone"/>
</LinearLayout>
